        NSString *cellid = @"HealthTestTableViewCell";
        HealthTestTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:cellid];
        
        cell.delegate = self;
        cell.selectionStyle = UITableViewCellSelectionStyleNone;

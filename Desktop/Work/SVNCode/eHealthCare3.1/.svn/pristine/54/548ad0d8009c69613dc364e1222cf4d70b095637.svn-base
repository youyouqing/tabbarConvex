    NSString *cellid = @"MineElectronicMedicCell";
    MineElectronicMedicCell *cell = [tableView dequeueReusableCellWithIdentifier:cellid];
    
    cell.selectionStyle = UITableViewCellSelectionStyleNone;
    return cell;
    
}

@implementation TabbarController

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    [self addAllChildVcs];
}

- (void)viewWillAppear:(BOOL)animated
{
    [super viewWillAppear:animated];
    
    self.tabBar.height = kTabbarHeight;
}

#pragma mark - private
- (void)addAllChildVcs
{
    HomeViewController *home = [[HomeViewController alloc]initWithType:pageTypeNoNavigation];
    [self addTabbarChlildVc:home title:@"È¶ñÈ°µ" imageName:@"icon_tab_home_normal" selectedImageName:@"icon_tab_home_selected"];
    
    Health_ViewController *health = [[Health_ViewController alloc]initWithType:pageTypeOnlyTitle];
    [self addTabbarChlildVc:health title:@"ÂÅ•Â∫∑+" imageName:@"icon_tab_plus_normal" selectedImageName:@"icon_tab_plus_selected"];
    
    MallViewController *mall = [[MallViewController alloc]initWithType:pageTypeNormal];
    [self addTabbarChlildVc:mall title:@"ÂïÜÂüé" imageName:@"icon_tab_store_normal" selectedImageName:@"icon_tab_store_selected"];
    
    PersonalCenterViewController *personal = [[PersonalCenterViewController alloc]initWithType:pageTypeNoNavigation];
    [self addTabbarChlildVc:personal title:@"Êàë" imageName:@"icon_tab_my_normal" selectedImageName:@"icon_tab_my_selected"];
    
}

- (void)addTabbarChlildVc:(UIViewController *)childVc title:(NSString *)title imageName:(NSString *)imageName selectedImageName:(NSString *)selectedImageName
{
    childVc.title = title;
    

    childVc.tabBarItem.image = [[UIImage imageNamed:imageName] imageWithRenderingMode:UIImageRenderingModeAlwaysOriginal];
    

    NSMutableDictionary *textAttrs = [NSMutableDictionary dictionary];
    textAttrs[NSForegroundColorAttributeName] = kTabbarTextColor;
    textAttrs[NSFontAttributeName] = [UIFont systemFontOfSize:11];
    [childVc.tabBarItem setTitleTextAttributes:textAttrs forState:UIControlStateNormal];
    

    NSMutableDictionary *selectedTextAttrs = [NSMutableDictionary dictionary];
    selectedTextAttrs[NSForegroundColorAttributeName] = kTabbarTextSelectColor;
    [childVc.tabBarItem setTitleTextAttributes:selectedTextAttrs forState:UIControlStateSelected];

    
    UIImage *selectedImage = [UIImage imageNamed:selectedImageName];
   
    childVc.tabBarItem.selectedImage = [selectedImage imageWithRenderingMode:UIImageRenderingModeAlwaysOriginal];
    [childVc.tabBarItem setTitlePositionAdjustment:UIOffsetMake(0, 0)];
  
    BaseNavigationViewController *nav = [[BaseNavigationViewController alloc] initWithRootViewController:childVc];
     nav.navigationBarHidden = YES;
    [self addChildViewController:nav];
    
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

